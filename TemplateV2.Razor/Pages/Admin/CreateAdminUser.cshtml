@page
@model CreateAdminUserModel
@{
    Layout = "~/Pages/Shared/_LayoutEmpty.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="small text-gray-500 mb-4">Template <sup>V2</sup></h1>
                                    <h1 class="h4 text-gray-900 mb-4">Create Admin User</h1>
                                </div>
                                <form method="post" class="form-horizontal" role="form">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="FormData.Username" class="control-label"></label>
                                        <input asp-for="FormData.Username" class="form-control" value="admin" />
                                        <span asp-validation-for="FormData.Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="FormData.Password" class="control-label"></label>
                                            <input asp-for="FormData.Password" class="form-control" />
                                            <span asp-validation-for="FormData.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label asp-for="FormData.PasswordConfirm" class="control-label"></label>
                                            <input asp-for="FormData.PasswordConfirm" class="form-control" />
                                            <span asp-validation-for="FormData.PasswordConfirm" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group my-4">
                                        <button type="submit" class="btn btn-primary btn-block">Complete Setup</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>